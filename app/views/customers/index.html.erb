<div class="dashboard-content">			
  <div class="row align-items-center mt-devices">
    <div class="col-lg-12">
      <h3 class="admintitle">Clientes</h3>
    </div>
  </div>

  <div class="row">			
    <table class="table table-striped table-hover table-sm table-responsive-sm table-responsive-lg">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.user.name') %></th>
          <th><%= t('activerecord.attributes.user.email') %></th>
          <th><%= t('activerecord.attributes.user.phone') %></th>
          <th><%= t('activerecord.attributes.user.address') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>                     
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.address %></td>
            <td>
              <%= link_to customer_path(customer), class:'', method: :get do %>
                <i class="fa fa-arrow-circle-right fs24 ph5"></i>
              <% end %>

              <%= link_to user_pets_path(customer), class:'', method: :get do %>
                <i class="flaticon-pet fs24 ph5"></i>
              <% end %>
            </td>
          </tr>
        <% end %>				                   
      </tbody>
    </table>
  </div>
</div>
