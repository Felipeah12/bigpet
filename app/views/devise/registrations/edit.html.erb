<section id="contact" class="dog-bg3">
  <div class="container">
    <div class="row">
      <div class="contact-info col-lg-8 offset-2 card bg-light-custom ptn">
        <div class="container">
          <div class="section-heading text-center mb20">
            <h3 class="mb5"><%= t('devise.views.update_account') %></h3>
          </div>
        </div>

        <div id="contact_form" class="pb10">
          <div class="form-group">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'login' }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row">                           
                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.user.email') %> <span class="required color-red">*</span></label>
                  <%= f.email_field :email, class:'form-control input-field', required: true, autocomplete: 'email', autofocus: true %>
                </div>

                <% if current_user.customer? %>
                  <div class="col-md-6">
                    <label><%= t('activerecord.attributes.user.name') %> <span class="required color-red">*</span></label>
                    <%= f.text_field :name, class:'form-control input-field', required: true, autocomplete: 'off' %>
                  </div>

                  <div class="col-md-6">
                    <label><%= t('activerecord.attributes.user.phone') %> <span class="required color-red">*</span></label>
                    <%= f.number_field :phone, class:'form-control input-field', required: true, autocomplete: 'off' %>
                  </div>

                  <div class="col-md-6">
                    <label><%= t('activerecord.attributes.user.address') %> <span class="required color-red">*</span></label>
                    <%= f.text_field :address, class:'form-control input-field', required: true, autocomplete: 'off' %>
                  </div>

                  <div class="col-md-6">
                    <label><%= t('activerecord.attributes.user.birthdate') %> <span class="required color-red">*</span></label>
                    <%= f.date_field :birthdate, class:'form-control input-field', autocomplete: 'off' %>
                  </div>
                <% end %>

                <div class="col-md-12">
                  <label>
                    <%= t('activerecord.attributes.user.password') %>
                    <span class="required color-red">*</span>
                  </label>
                  <%= f.password_field :password, class:'form-control input-field', autocomplete: 'new-password' %>
                  
                  <% if @minimum_password_length %>
                    <em>(<%= t('devise.views.password_length', length: @minimum_password_length) %>)</em>
                  <% end %><br/>
                </div>

                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.user.password_confirmation') %> <span class="required color-red">*</span></label>
                  <%= f.password_field :password_confirmation, class:'form-control input-field', autocomplete: 'new-password' %>
                </div>

                <div class="col-md-12">
                  <label>
                    <%= t('activerecord.attributes.user.current_password') %>
                    <span class="required color-red">*</span>
                    <i>(<%= t('devise.views.current_password') %>)</i>
                  </label>
                  <%= f.password_field :current_password, class:'form-control input-field', required: true, autocomplete: 'current-password' %>
                </div>                      

                <div class="col-lg-12">
                  <%= f.submit t('btn.edit'), class:'btn btn-primary float-right btn-sm' %>
                </div>
              </div>
            <% end %>
          </div>                     
        </div>       
      </div>

    </div>        
  </div>
</section>
