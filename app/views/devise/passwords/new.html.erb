<section id="contact" class="dog-bg3">
  <div class="container">
    <div class="row">
      <div class="contact-info col-lg-8 offset-2 card bg-light-custom ptn">
        <div class="container">
          <div class="section-heading text-center mb20">
            <h5 class="mb5"><%= t('devise.views.recover_password') %></h5>
          </div>
        </div>

        <div id="contact_form" class="pb10">
          <div class="form-group">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login' }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row">                           
                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.user.email') %> <span class="required color-red">*</span></label>
                  <%= f.email_field :email, class:'form-control input-field', required: true, autocomplete: 'off', autofocus: true %>
                </div>

                <div class="col-lg-12 text-center">
                  <%= f.submit t('devise.views.send_instructions'), class: 'btn btn-primary btn-sm' %>
                </div>
              </div>
            <% end %>
          </div>                     
        </div>
        
        <%= render "devise/shared/links" %>         
      </div>

    </div>        
  </div>
</section>
