<section id="contact" class="dog-bg3">
  <div class="container">
    <div class="row">
      <div class="contact-info col-lg-8 offset-2 card bg-light-custom ptn">
        <div class="container">
          <div class="section-heading text-center mb20">
            <h5 class="mb5"><%= t('devise.views.change_password') %></h5>
          </div>
        </div>

        <div id="contact_form" class="pb10">
          <div class="form-group">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="row">                           
                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.user.password') %> <span class="required color-red">*</span></label>
                  <%= f.password_field :password, class:'form-control input-field', required: true, autocomplete: 'new-password', autofocus: true %>
                  <% if @minimum_password_length %>
                    <em class="fs12">(<%= t('devise.views.password_length', length: @minimum_password_length) %>)</em>
                    <span class="required color-red">*</span>
                  <% end %><br/>
                </div>

                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.user.password_confirmation') %> <span class="required color-red">*</span></label>
                  <%= f.password_field :password_confirmation, class:'form-control input-field', required: true, autocomplete: 'new-password', autofocus: true %>
                </div>

                <div class="col-lg-12 text-center">
                  <%= f.submit t('devise.views.change_password'), class: 'btn btn-primary btn-sm' %>
                </div>
              </div>
            <% end %>
          </div>                     
        </div>
        
        <%= render "devise/shared/links" %>         
      </div>

    </div>        
  </div>
</section>
