<%- if controller_name != 'sessions' %>
  <div class="col-lg-12 text-center">
    <%= link_to t('devise.views.login'), new_session_path(resource_name), class: 'color-grey txt-unline', method: :get %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="col-lg-12 text-center">
    <%= link_to t('devise.views.signup'), new_registration_path(resource_name), class: 'color-grey txt-unline', method: :get %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="col-lg-12 text-center">
    <%= link_to t('devise.views.recover_password'), new_password_path(resource_name), class: 'color-grey txt-unline', method: :get %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="col-lg-12 text-center">
    <%= link_to t('devise.views.confirm_instructions'), new_confirmation_path(resource_name), class: 'color-grey txt-unline', method: :get %><br />
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="col-lg-12 text-center">
    <%= link_to t('devise.views.unlock_instructions'), new_unlock_path(resource_name), class: 'color-grey txt-unline', method: :get %><br />
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="col-lg-12 text-center">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "#{ t('devise.views.signin_with') } #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'color-grey txt-unline', method: :get %><br />
    <% end %>
  </div>
<% end %>
