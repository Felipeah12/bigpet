<div class="dashboard-content">	
  <div class="row align-items-center mt-devices">
    <h3 class="admintitle">Confirma t√∫ pedido</h3>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 bg-light-custom border-irregular1 block-padding p30">
      <div class="col-lg-12">
        <% if @order && @order.order_collection %>
          <% collection = @order.order_collection %>
          <div class="row border-date pb10">
            <div class="col-xs-12 col-md-6">
              <% if collection.brand.image.attached? %>
                <div class="col-md-12">
                  <%= image_tag collection.brand.image, alt: 'img', class:'rounded-circle', size: '160x160' %>
                </div>
              <% end %>
            </div>

            <div class="col-xs-12 col-md-6">
              <div class="col-md-12">
                <div class="col-xs-12 col-md-12 pn">
                  <h5 class="admintitle fs20 text-left">Producto</h5>
                </div>
              </div>
              <div class="col-lg-12 col-md-12 col-xs-12">
                <strong><%= t('activerecord.attributes.brand.name') %>: </strong> <%= collection.brand.name %> 
              </div>
              <div class="col-lg-12 col-md-12 col-xs-12">
                <strong><%= t('activerecord.attributes.brand.kind_of_pet') %>: </strong> <%= enum_kind(collection.brand.kind_of_pet) %>
              </div>
              <div class="col-lg-12 col-md-12 col-xs-12">
                <strong><%= t('activerecord.attributes.brand.gram_amount') %>: </strong> <%= collection.brand.gram_amount %>
              </div>
            </div>
          </div>
        <% end %>             	
        <div class="row mt20">
          <div class="col-xs-12 col-md-12">
            <h5 class="admintitle pull-left fs20 mv10">Detalle del pedido</h5>
          </div>

          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.price') %>: </strong> <%= @order.price %> 
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.delivery_date') %>: </strong> <%= @order.delivery_date %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.address') %>: </strong> <%= @order.address %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.months') %>: </strong> <%= @order.months %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.comment') %>: </strong> <%= @order.comment %>
          </div>
        </div>
      </div>

      <div class="col-sm-12 mt20">
        <%= link_to t('btn.payment'), '', class: 'btn btn-primary pull-right btn-sm mh10' %>
        <%= link_to t('btn.update_payment'), new_user_quote_path(current_user, brand: collection.brand), class: 'btn btn-primary pull-right btn-sm', method: :get %>
      </div>
    </div>
  </div>
</div>
