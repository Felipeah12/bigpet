<div class="dashboard-content">			
	<div class="row align-items-center mt-devices">
		<div class="col-lg-10">
			<h2 class="admintitle">Marcas</h2>
		</div>

		<div class="col-lg-2">
			<%= link_to new_brand_path, class: 'btn btn-primary btn-sm pull-right', method: :get do %>
				Nueva Marca
			<% end %>	
		</div>
	</div>

	<div class="row">			
		<div class="col-lg-12 col-md-12" style="overflow-x:auto;">
			<table class="table table-striped table-hover table-sm">
				<thead>
					<tr>
						<th><%= t('activerecord.attributes.brand.image') %></th>
						<th><%= t('activerecord.attributes.brand.name') %></th>
						<th><%= t('activerecord.attributes.brand.min') %></th>
						<th><%= t('activerecord.attributes.brand.max') %></th>
						<th><%= t('activerecord.attributes.brand.gram') %></th>
						<th><%= t('activerecord.attributes.brand.size_type') %></th>
						<th><%= t('activerecord.attributes.brand.kind_of_pet') %></th>
						<th><%= t('activerecord.attributes.brand.price') %></th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<% @brands.each do |brand| %>
						<tr>
							<td>
								<%= image_tag brand.image, class: 'imagebrandlistcrud m10', alt: brand.name %>
							</td>
							<td><%= brand.name %></td>
							<td><%= brand.min_width %></td>
							<td><%= brand.max_width %></td>
							<td><%= brand.gram_amount %></td>
							<td><%= enum_size(brand.size_type) %></td>
							<td><%= enum_kind(brand.kind_of_pet) %></td>
							<td><%= brand.price %></td>

							<td colspan="2">
								<%= link_to brand, class:'', method: :get do %>
									<i class="fa fa-arrow-circle-right fs24 ph3"></i>
								<% end %>

								<%= link_to edit_brand_path(brand), class:'', method: :get do %>
									<i class="fa fa-pencil fs24 ph3"></i>
								<% end %>
								<%= link_to brand, class:'', method: :delete, data: { confirm: t('messages.are_you_sure') }  do %>
									<i class="fa fa-trash fs24 ph3"></i>
								<% end %>
							</td>
						</tr>
					<% end %>				                   
				</tbody>
			</table>
		</div>
	</div>
</div>
