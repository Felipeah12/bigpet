<div class="dashboard-content">	
	<div class="row align-items-center mt-devices">
		<h3 class="admintitle">Marca</h3>
	</div>

	<div class="row">
		<div class="col-sm-12 col-md-8 offset-md-2 bg-light-custom border-irregular1 block-padding p30">
			<div class="col-lg-12 col-md-12">              	
				<div class="row">
					<div class="col-md-6">
						<strong><%= t('activerecord.attributes.brand.name') %>: </strong> <%= @brand.name %> 
					</div>
					<div class="col-md-6">
						<strong><%= t('activerecord.attributes.brand.min_width') %>: </strong> <%= @brand.min_width %>
					</div>
					<div class="col-md-6">
						<strong><%= t('activerecord.attributes.brand.max_width') %>: </strong> <%= @brand.max_width %>
					</div>
					<div class="col-md-6">
						<strong><%= t('activerecord.attributes.brand.gram_amount') %>: </strong> <%= @brand.gram_amount %>
					</div>
					<div class="col-md-6">
						<strong><%= t('activerecord.attributes.brand.size_type') %>: </strong> <%= enum_size(@brand.size_type) %>
					</div>
					<div class="col-md-6">
						<strong><%= t('activerecord.attributes.brand.kind_of_pet') %>: </strong> <%= enum_kind(@brand.kind_of_pet) %>
					</div>
					<div class="col-md-12">
						<strong><%= t('activerecord.attributes.brand.price') %>: </strong> $<%= @brand.price %> 
					</div>
				</div>

				<div class="row mt20">
					<strong class="pl15">Foto:</strong>
					<div class="col-md-12 display-flex">
						<%= (image_tag @brand.image, class:'imagebrandlistcrud m20' ) if @brand.image.attached? %>
					</div>                                         
				</div>
			</div>

			<div class="col-sm-12">
				<%= link_to t('btn.back'), brands_path, class: 'btn btn-primary pull-right btn-sm', method: :get %>
			</div>
		</div>
	</div>
</div>
