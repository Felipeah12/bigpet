<div class="dashboard-content">			
  <div class="row align-items-center mt-devices">
    <div class="col-lg-12">
      <h3 class="admintitle">Contactos</h3>
    </div>
  </div>

  <div class="row">			
    <table class="table table-striped table-hover table-sm table-responsive-sm table-responsive-lg">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.contact.name') %></th>
          <th><%= t('activerecord.attributes.contact.email') %></th>
          <th><%= t('activerecord.attributes.contact.subject') %></th>
          <th><%= t('activerecord.attributes.contact.message') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>                     
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.subject %></td>
            <td><%= truncate(contact.message, length: 40, separator: ' ') %></td>
            <td>
              <%= link_to contact, class:'', method: :get do %>
                <i class="fa fa-arrow-circle-right fs24"></i>
              <% end %>
              <%= link_to contact, class:'', method: :delete, data: { confirm: t('messages.are_you_sure') }  do %>
                <i class="fa fa-trash fs24 ph3"></i>
              <% end %>
            </td>
          </tr>
        <% end %>				                   
      </tbody>
    </table>
  </div>
</div>
