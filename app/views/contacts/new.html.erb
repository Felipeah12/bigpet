<section id="contact" class="dog-bg3">
  <div class="container mtn15">
    <div class="section-heading text-center mb30">
      <h3>Contáctanos</h3>
    </div>
  </div>
  <div class="container">
    <div class="row">

      <div class="contact-info col-lg-5 card bg-light-custom p20">
        <h4>Escribenos!</h4>

        <%= form_with(model: @contact, local: true, html: { class:'login' }) do |f|%>
          <div id="contact_form">
            <div class="form-group">
              <% if @contact.errors.any? %>
                <%= render 'layouts/error_messages', resource: @contact %>
              <% end %>

              <div class="row">
                <div class="col-md-6">
                  <label><%= t('activerecord.attributes.contact.name') %><span class="required">*</span></label>
                  <%= f.text_field :name, class:'form-control input-field', required: true %>
                </div>
                <div class="col-md-6">
                  <label><%= t('activerecord.attributes.contact.email') %>  <span class="required">*</span></label>
                  <%= f.text_field :email, class: 'form-control input-field', required: true %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.contact.subject') %></label>
                  <%= f.text_field :subject, class: 'form-control input-field', required: true %>
                </div>
                <div class="col-md-12">
                  <label><%= t('activerecord.attributes.contact.message') %><span class="required">*</span></label>
                  <%= f.text_area :message, class: 'textarea-field form-control', required: true %>
                </div>
              </div>

              <%= f.submit t('btn.send'), class:'btn btn-primary' %>
            </div>

            <div id="contact_results"></div>
          </div>
        <% end %>
      </div>

      <div class="col-lg-7">
        <div id="map-canvas" class="mt-3 border-irregular1"></div>
      </div>
    </div>

    <div class="row res-margin mt-5">
      <div class="col-lg-6 mt-5">
        <div class="contact-icon">
          <i class="fa fa-envelope top-icon"></i>
          <div class="contact-icon-info">
            <h5>Escribenos </h5>
            <p class="h7"><a href="mailto:bigpetco@gmail.com">bigpetco@gmail.com</a></p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 mt-5">
        <div class="contact-icon">
          <i class="fa fa-map-marker top-icon"></i>
          <div class="contact-icon-info">
            <h5>Visitanos</h5>
            <p class="h7">Calle 100 #10-10 - Bogotá</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>     
