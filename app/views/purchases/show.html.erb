<div class="dashboard-content">	
  <div class="row align-items-center mt-devices">
    <h3 class="admintitle">Pedido</h3>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 bg-light-custom border-irregular1 block-padding p30">
      <div class="col-lg-12">              	
        <div class="row">
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.price') %>: </strong> <%= @purchase.price %> 
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.address') %>: </strong> <%= @purchase.address %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.delivery_date') %>: </strong> <%= @purchase.delivery_date %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.order.comment') %>: </strong> <%= @purchase.comment %>
          </div>
        </div>
      </div>

      <div class="col-sm-12">
        <%= link_to t('btn.back'), purchases_path, class: 'btn btn-primary pull-right btn-sm', method: :get %>
      </div>
    </div>
  </div>
</div>