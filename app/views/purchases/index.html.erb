<div class="dashboard-content">			
  <div class="row align-items-center mt-devices">
    <h2 class="admintitle">Pedidos</h2>
  </div>

  <div class="row">			
    <div class="col-lg-12 col-md-12" style="overflow-x:auto;">
      <table class="table table-striped table-hover table-sm">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.order.price') %></th>
            <th><%= t('activerecord.attributes.order.address') %></th>
            <th><%= t('activerecord.attributes.order.delivery_date') %></th>
            <th><%= t('activerecord.attributes.order.comment') %></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
              <td><%= purchase.price %></td>
              <td><%= purchase.address %></td>
              <td><%= purchase.delivery_date %></td>
              <td><%= truncate(purchase.comment, lenght: 50, separator: ' ') %></td>

              <td colspan="2">
                <%= link_to purchase, class:'', method: :get do %>
                  <i class="fa fa-arrow-circle-right fs24 ph5"></i>
                <% end %>
              </td>
            </tr>
          <% end %>				                   
        </tbody>
      </table>
    </div>
  </div>
</div>
