<div class="dashboard-content">			
  <div class="row align-items-center mt-devices">
    <h2 class="admintitle">PQRS</h2>
  </div>

  <div class="row">			
    <div class="col-lg-12 col-md-12" style="overflow-x:auto;">
      <table class="table table-striped table-hover table-sm">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.suggestion.email') %></th>
            <th><%= t('activerecord.attributes.suggestion.phone') %></th>
            <th><%= t('activerecord.attributes.suggestion.question') %></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @suggestions.each do |suggestion| %>
            <tr>
              <td><%= suggestion.email %></td>
              <td><%= suggestion.phone %></td>
              <td><%= truncate(suggestion.question, lenght: 70, separator: ' ') %></td>

              <td colspan="2">
                <%= link_to suggestion, class:'', method: :get do %>
                  <i class="fa fa-arrow-circle-right fs24 ph5"></i>
                <% end %>

                <%= link_to suggestion, class:'', method: :delete, data: { confirm: t('messages.are_you_sure') }  do %>
                  <i class="fa fa-trash fs24 ph5"></i>
                <% end %>
              </td>
            </tr>
          <% end %>				                   
        </tbody>
      </table>
    </div>
  </div>
</div>
