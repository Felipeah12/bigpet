<% if notice %>
  <div class="notice-content">
    <div class="row ml20">           
      <div class="col-md-12">
        <div class="alert alert-success" role="alert">
          <%= link_to '&times;'.html_safe, '#', class:'close', :'data-dismiss' => 'alert', :'aria-label' => 'close'  %>
          <p><%= notice.html_safe %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
