<div class="dashboard-content">	
  <div class="row align-items-center mt-devices">
    <h3 class="admintitle">Mascota</h3>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 bg-light-custom border-irregular1 block-padding p30">
      <div class="col-lg-12">              	
        <div class="row">
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.pet.name') %>: </strong> <%= @pet.name %> 
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.pet.age') %>: </strong> <%= @pet.age %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.pet.kind_of_pet') %>: </strong> <%= enum_kind(@pet.kind_of_pet) %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.pet.gender') %>: </strong> <%= enum_gender(@pet.gender) %>
          </div>
          <div class="col-md-6">
            <strong><%= t('activerecord.attributes.pet.weight') %>: </strong> <%= @pet.weight %>
          </div>
        </div>
      </div>

      <div class="col-sm-12">
        <% route = current_user.admin? ? user_pets_path(@user) : @user %>
        <%= link_to t('btn.back'), route, class: 'btn btn-primary pull-right btn-sm', method: :get %>
      </div>
    </div>
  </div>
</div>
