<div class="row bg-light-custom border-irregular1 block-padding p20">
  <div class="col-lg-12 col-md-12 profileform">
    <div class="form-group">
      <%= form_with(model: @newsletter, local: true, html: { class:'login' }) do |f| %>
        <% if @newsletter.errors.any? %>
          <%= render 'layouts/error_messages', resource: @newsletter %>
        <% end %>

        <div class="row">
          <div class="col-md-6">
            <label><%= t('activerecord.attributes.newsletter.title') %> <span class="required">*</span></label>
            <%= f.text_field :title, class: 'form-control input-field', required: true, autofocus: true %>
          </div>

          <div class="col-md-6">
            <label><%= t('activerecord.attributes.newsletter.content') %> <span class="required">*</span></label>
            <%= f.text_area :content, class: 'form-control input-field', required: true %>
          </div>

          <div class="col-md-6">                        
            <label><%= t('activerecord.attributes.newsletter.image') %>  <span class="required">*</span></label>                          
            <%= f.file_field :image, class: 'form-control input-field' %>
          </div>
        </div>

        <div class="row mt20">
          <% if @newsletter.image.attached? && @newsletter.persisted? %>
            <div class="col-md-10">
              <strong class="pl15">Foto Actual:</strong>
              <div class="col-md-10 offset-1">
                <%= (image_tag @newsletter.image, class:'imagebrandlistcrud m20' ) if @newsletter.image.attached? %>
              </div>                                         
            </div>
          <% end %>

          <div class="col-md-<%= @newsletter.image.attached? && @newsletter.persisted? ? 2 : 12 %>">
            <%= f.submit btn_title, class: 'btn btn-primary mt30 pull-right' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
